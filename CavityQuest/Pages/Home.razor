@page "/"

@using CavityQuest.Pages

<PageTitle>Cavity Quest</PageTitle>

@if (!showGame)
{
    <div style="display: flex; flex-direction: column; align-items: center; justify-content: space-between; height: 100vh; min-height: 100vh; overflow: hidden; padding: 0; margin: 0;">
        <div style="flex: 1; display: flex; align-items: center; justify-content: center; width: 100%;">
            <img src="/pictures/front.png" alt="Front Page" style="max-width: 80vw; max-height: 60vh; width: auto; height: auto; object-fit: contain;" />
        </div>
        <div style="width: 100%; display: flex; justify-content: center; align-items: flex-end; padding-bottom: 4vh;">
            <button @onclick="StartGame" style="background: none; border: none; cursor: pointer; padding: 0; margin: 0;">
                <img src="/pictures/play.png" alt="Play" style="width: min(180px, 40vw); height: auto; display: block;" />
            </button>
        </div>
    </div>
}
else
{
    <Game />
}

@code {
    private bool showGame = false;
    private void StartGame()
    {
        showGame = true;
    }
}
